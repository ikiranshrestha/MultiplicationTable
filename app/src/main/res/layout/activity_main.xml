    <SeekBar
        android:id="@+id/skBarTableSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:progress="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="570dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/skBarTableSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTableOf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Table of" />

        <ListView
            android:id="@+id/lvTableView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSeekBarDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range (1 - 20): Adjust the bar to toggle betwen the numbers within the range."
        android:textSize="18dp"
        android:textStyle="italic"
        android:padding="8px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skBarTableSelect" />

</androidx.constraintlayout.widget.ConstraintLayout>